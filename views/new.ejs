<% include ../partials/header %>
	
	<div class="sml-container center-block">
		<h1>Create new blog</h1>
		<form id="auth-form" method="POST" action="/blogs">
			<div class="form-group">
				<input class="form-control" type="text" name="blog[title]" placeholder="title">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="blog[image]" placeholder="image link">
			</div>
			<div class="form-group">
				<textarea rows="15" class="form-control" type="text" name="blog[content]" placeholder="write content here..."></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-md btn-default btn-primary form-control">Create</button>
			</div>	
		</form>
	</div>
<% include ../partials/footer %>