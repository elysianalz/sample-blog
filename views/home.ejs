<% include ../partials/header %>
	
	<h1>Blogs</h1>
	<% blogs.forEach(function(blog){%>
	<a href="/blogs/<%=blog._id%>">
		<div class="thumbnail">
			<div class="container">
				<h1><%=blog.title%></h1>
				<img class="img-responsive" src="<%=blog.image%>">
				<div class="caption">
					<p><%=blog.content%></p>
					<p><%=blog.author%></p>
					<p><%=blog.created.toDateString()%></p>
				</div>
			</div>
		</div>
	</a>
	<%})%>

<% include ../partials/footer %>